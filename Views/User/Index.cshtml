@model IEnumerable<Demo_Code_First.Models.User>

<!-- Link đến Bootstrap CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <!-- Tiêu đề của trang -->
    <h2 class="text-center mb-4">Danh sách người dùng</h2>

    <!-- Card hiển thị bảng dữ liệu người dùng -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Tên người dùng</th>
                        <th>Email</th>
                        <th>Mật khẩu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.userId</td>
                            <td>@user.userName</td>
                            <td>@user.email</td>
                            <td>@user.password</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Card chứa nút xóa tất cả tài khoản -->
        <div class="card mt-4">
            <div class="card-body text-center">
                <form asp-action="DeleteAll" method="post" onsubmit="return confirm('Bạn có chắc chắn muốn xóa tất cả tài khoản?');">
                    <!-- Đổi nút thành nhỏ hơn và căn giữa -->
                    <button type="submit" class="btn btn-danger btn-sm">Xóa tất cả tài khoản</button>
                </form>
            </div>
        </div>
    </div>
</div>
